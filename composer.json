{
    "name": "payment-gateway/laravel-package",
    "description": "A reusable, multi-gateway Laravel payment package.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Afshin Efati",
            "email": "afshin.efati@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "PaymentGateway\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "PaymentGateway\\PaymentServiceProvider"
            ],
            "aliases": {
                "Payment": "PaymentGateway\\Facades\\Payment"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
